<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smar">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_logo_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name=".WelcomeActivity" android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />


                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CheckSignInStatus" android:theme="@style/NoActionBar"/>
        <activity android:name=".ArchievedProjects" android:theme="@style/Theme.AppCompat.Light"/>
        <activity android:name=".AuthenticationActivity" android:noHistory="true"/>
        <activity
            android:name=".AdminPage"
            android:theme="@style/Theme.AppCompat.Light"   />

        <activity
            android:name=".ClientPhotos"
            android:theme="@style/Theme.AppCompat.Light"   />
        <activity
            android:name=".AdminTasksPage"
            android:theme="@style/Theme.AppCompat.Light"   />
        <activity
            android:name=".TaskStatusUpdate"
            android:windowSoftInputMode="stateVisible|adjustResize"
            android:theme="@style/Theme.AppCompat.Light"
            android:screenOrientation="portrait"/>

        <activity android:name=".ClientPage" android:theme="@style/Theme.AppCompat.Light" />

    </application>

</manifest>