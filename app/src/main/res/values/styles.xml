<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="calender_theme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:colorControlActivated">@color/blue</item> <!--selected day-->
        <item name="android:textColorSecondary">@color/gray</item><!--days of the week-->
        <item name="android:selectedWeekBackgroundColor">@color/colorPrimary</item>
    </style>

    <style name="NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fontFamily">@font/nunitoregular</item>
    </style>

</resources>
