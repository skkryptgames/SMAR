<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp" >

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:id="@+id/smar_imageview_moduleimage"
        android:layout_alignParentStart="true"/>
    <TextView
        android:id="@+id/smar_textview_modulename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/smar_imageview_moduleimage"
        android:text="Design"
        android:textSize="16sp"
        android:textColor="@color/blue"
        android:fontFamily="@font/nunitobold"
        android:layout_marginStart="12dp"/>
    <TextView
        android:id="@+id/smar_textview_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:layout_below="@+id/smar_textview_modulename"
        android:layout_alignStart="@+id/smar_textview_modulename"/>
    <TextView
        android:id="@+id/smar_textview_startdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oct 31 2019"
        android:textSize="16sp"
        android:textColor="@color/blue"
        android:layout_below="@+id/smar_textview_start"
        android:layout_alignStart="@+id/smar_textview_modulename"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/smar_textview_start"
            android:layout_toEndOf="@+id/smar_textview_startdate"
            android:layout_marginStart="32dp">
            <TextView
                android:id="@+id/smar_textview_numofdays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Num of Days"
                android:textSize="12sp"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:digits="0123456789"
                android:maxLength="3"
                android:inputType="number"
                android:layout_below="@+id/smar_textview_numofdays"
                android:text="4"
                android:textSize="16sp"
                android:textColor="@color/blue"
                />
        </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/smar_textview_startdate"
        android:background="@color/gray"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/smar_radiobutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_panorama_fish_eye_black_24dp"
        />


</RelativeLayout>