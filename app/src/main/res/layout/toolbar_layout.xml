<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/smar_toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="SmartNest"
        android:textColor="@color/white"
        android:fontFamily="@font/nunitoregular"
        />
    <ImageView
        android:id="@+id/smar_toolbar_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_060_tools_and_utensils_4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginVertical="10dp"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/smar_imageview_signout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/signout_demo"
        android:layout_marginEnd="8dp"/>



</RelativeLayout>